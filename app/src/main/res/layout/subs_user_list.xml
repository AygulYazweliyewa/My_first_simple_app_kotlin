<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subs_user_list">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/subsFUserAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/avatar"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subsFUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:text="User name"
        android:textSize="12sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="@+id/subsFUserAvatar"
        app:layout_constraintStart_toStartOf="@+id/subsFUserAvatar"
        app:layout_constraintTop_toBottomOf="@+id/subsFUserAvatar" />

</androidx.constraintlayout.widget.ConstraintLayout>