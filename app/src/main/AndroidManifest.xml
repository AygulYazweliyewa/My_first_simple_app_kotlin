<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/youtubelogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeletVideoexample"
        android:usesCleartextTraffic="true"
        tools:targetApi="tiramisu">
        <activity
            android:name="com.example.youtubeclone.WatchActivity"
            android:exported="false"
            android:label="WatchActivity"
            android:screenOrientation="userLandscape"
            android:theme="@style/Theme.BeletVideoexample.Fullscreen" />
        <activity
            android:name="com.example.youtubeclone.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>